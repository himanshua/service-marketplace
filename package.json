{
  "name": "service-marketplace",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:backend": "npm --workspace backend run dev",
    "dev": "concurrently 'npm:dev:backend' 'npm:dev:frontend'",
    "build": "npm --workspace frontend run build",
    "lint": "npm --workspaces run lint",
    "test": "npm --workspaces run test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "npm@10.8.1",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9"
  },
  "lint-staged": {
    "backend/**/*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix --config backend/eslint.config.cjs",
      "prettier --write"
    ],
    "frontend/**/*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix --config frontend/eslint.config.mjs",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
