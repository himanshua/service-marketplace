{
  "name": "service-marketplace",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm --workspace frontend run dev",
    "build": "npm --workspace frontend run build",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9"
  },
  "lint-staged": {
    "*.{json,md,css}": "prettier --write"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
