{
  "name": "service-marketplace",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "prepare": "husky",
    "lint": "npm --workspace backend run lint",
    "test": "npm --workspace backend run test",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{json,md,css}": "prettier --write"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "npm@10.8.1"
}
